@model Customer
@{
    ViewData["Title"] = "UpdateCustomer";
}


<form asp-controller="Customer" asp-action="UpdateCustomer" method="post">
    <input type="hidden" asp-for="CustomerID" />
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="CustomerName">Müşteri adı</label>
        <input asp-for="CustomerName" type="text" class="form-control" id="customername">
    </div>
    <div class="form-group">
        <label asp-for="CustomerCity">Şehir</label>
        <input asp-for="CustomerCity" type="text" class="form-control" id="customercity">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>
