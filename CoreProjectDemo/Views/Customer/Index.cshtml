@model List<Customer>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <table class="table table-responsive">
        <tr style="color:#0b5ed7" class="text-center">
            <th>#</th>
            <th>Müşteri Adı</th>
            <th>Şehir</th>
            <th>İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td style="color:red">@item.CustomerID</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerCity</td>
                <td>
                    <a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@item.CustomerID" class="btn btn-danger">Sil</a>
                    <a asp-controller="Customer" asp-action="UpdateCustomer" asp-route-id="@item.CustomerID" class="ms-2 btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }

    </table>
</div>