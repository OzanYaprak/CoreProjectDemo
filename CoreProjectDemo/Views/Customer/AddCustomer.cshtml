@model Customer
@{
    ViewData["Title"] = "AddCustomer";
}


<form asp-controller="Customer" asp-action="AddCustomer" method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="CustomerName">Müşteri adı</label>
        <input asp-for="CustomerName" type="text" class="form-control" id="customername">
    </div>
    <div class="form-group">
        <label asp-for="CustomerCity">Şehir</label>
        <input asp-for="CustomerCity" type="text" class="form-control" id="customercity">
    </div>
    <div class="form-group">
        <label asp-for="JopID">Meslek</label>
        <select class="form-control mt-2" asp-for="JopID" asp-items="@(new SelectList(ViewBag.jobList,"Value","Text"))">
            <option value="" selected disabled>Meslek seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
</form>