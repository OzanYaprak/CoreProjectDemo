@model List<Product>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <table class="table table-responsive">
        <tr style="color:#0b5ed7" class="text-center">
            <th>#</th>
            <th>Ürün İsmi</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td style="color:red">@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice ₺</td>
                <td>@item.ProductStock</td>
                <td>
                    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductID" class="btn btn-danger">Sil</a>
                    <a href="" class="ms-2 btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }

    </table>
</div>



