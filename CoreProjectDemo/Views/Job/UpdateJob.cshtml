@model Job
@{
    ViewData["Title"] = "UpdateJob";
}

<form asp-controller="Job" asp-action="UpdateJob" method="post">
    <input asp-for="JobID" type="hidden" />
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="JobName">Meslek adı</label>
        <input asp-for="JobName" type="text" class="form-control" id="jobname">
    </div>
    <button type="submit" class="btn btn-secondary mt-3">Güncelle</button>
</form>
