@model UserRegisterViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    <link href="~/client/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Hesap Oluştur</h3></div>
                                <div class="card-body">
                                    <form asp-controller="Register" asp-action="Index" method="post">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for="Name" name="Name" id="inputFirstName" type="text" placeholder="" />
                                                    <label for="inputFirstName">İsim</label>
                                                    <span asp-validation-for="Name"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input class="form-control" asp-for="Surname" name="Surname" id="inputLastName" type="text" placeholder="" />
                                                    <label for="inputLastName">Soyad</label>
                                                    <span asp-validation-for="Surname"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Email" name="Email" id="inputEmail" type="email" placeholder="" />
                                            <label for="inputEmail">Email</label>
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Username" name="Username" id="inputUsername" type="text" placeholder="" />
                                            <label for="inputUsername">Kullanıcı adı</label>
                                            <span asp-validation-for="Surname"></span>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for="Password" name="Password" id="inputPassword" type="password" placeholder="" />
                                                    <label for="inputPassword">Şifre</label>
                                                    <span asp-validation-for="Password"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" asp-for="ConfirmPassword" name="ConfirmPassword" id="inputPasswordConfirm" type="password" placeholder="" />
                                                    <label for="inputPasswordConfirm">Şifre tekrarı</label>
                                                    <span asp-validation-for="ConfirmPassword"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Oluştur</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="#">Bir hesabınız var mı ? Giriş yapın.</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Tüm hakları saklıdır @DateTime.Now.Year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/client/js/scripts.js"></script>
</body>
</html>

